<p id="notice"><%= notice %></p>

<h1>Todo List</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Due</th>
      <th>Completed</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @todo_lists.each do |todo_list| %>
      <tr>
        <td><%= todo_list.title %></td>
        <td><%= todo_list.description %></td>
        <td><%= todo_list.due %></td>
        <td><%= todo_list.completed ? 'Yes' : 'No' %></td>
        <td><%= link_to 'View', todo_list %></td>
        <td><%= link_to 'Update', edit_todo_list_path(todo_list) %></td>
        <td><%= link_to 'Remove', todo_list, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Item', new_todo_list_path %>
